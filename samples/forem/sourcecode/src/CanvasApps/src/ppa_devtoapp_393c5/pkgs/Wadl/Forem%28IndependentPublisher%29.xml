    <resource path="/{connectionId}/api/articles/me/all">
      <param style="template" name="connectionId" type="xs:string" required="true" />
      <method siena:requiresAuthentication="true" name="GET" id="GetAllMyArticles" actionName="GetAllMyArticles" siena:isDeprecated="false">
        <doc title="Get all my articles&#xA;Use this to get all your articles (both published and unpublished). By default it will return featured, published articles ordered by descending popularity." />
        <request>
          <param style="query" name="page" type="xs:int" required="true" default="1">
            <doc title="The pagination page of the results." />
          </param>
          <param style="query" name="per_page" type="xs:int" required="true" default="30">
            <doc title="The page size of the results (the number of items to return per page)." />
          </param>
        </request>
        <response>
          <representation mediaType="application/json" element="service:responses_Articles200_def" />
        </response>
      </method>
    </resource>
    <resource path="/{connectionId}/api/articles">
      <param style="template" name="connectionId" type="xs:string" required="true" />
      <method siena:requiresAuthentication="true" name="GET" id="GetArticles" actionName="GetArticles" siena:isDeprecated="false">
        <doc title="Get articles&#xA;Use this actions to get a list of articles." />
        <request>
          <param style="query" name="page" type="xs:int" required="true" default="1">
            <doc title="The pagination page of the results." />
          </param>
          <param style="query" name="per_page" type="xs:int" required="true" default="30">
            <doc title="The page size of the results (the number of items to return per page)." />
          </param>
          <param style="query" name="tag" type="xs:string" required="true" default="discuss">
            <doc title="The tag you want to limit the query by (e.g. 'discuss' will return only articles with the tag discuss)." />
          </param>
          <param style="query" name="tags" type="xs:string">
            <doc title="The tags you want to limit the query by, separated by a comma (e.g. 'javascript, css' will return only articles with the tags javascript and css)." />
          </param>
          <param style="query" name="tags_exclude" type="xs:string">
            <doc title="The tags you want to exclude from the query, separated by a comma (e.g. 'node, java' will not return articles with the tags node and java)." />
          </param>
          <param style="query" name="username" type="xs:string">
            <doc title="The username of the user or the username of the organization." />
          </param>
          <param style="query" name="state" type="xs:string" default="fresh">
            <doc title="Using this parameter will allow the client to check which articles are fresh or rising. If state=fresh the server will return fresh articles. If state=rising the server will return rising articles. This param can be used in conjuction with username, only if set to all." />
          </param>
          <param style="query" name="top" type="xs:string" default="2">
            <doc title="Using this parameter will allow the client to return the most popular articles in the last N days. top indicates the number of days since publication of the articles returned. This param can be used in conjuction with tag." />
          </param>
          <param style="query" name="collection_id" type="xs:string" default="99">
            <doc title="Adding this will allow the client to return the list of articles belonging to the requested collection, ordered by ascending publication date." />
          </param>
        </request>
        <response>
          <representation mediaType="application/json" element="service:responses_Articles200_def" />
        </response>
      </method>
    </resource>
